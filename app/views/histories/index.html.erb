<h1>历史菜单</h1>

<table class="table table-borderd">
  <thead>
    <tr>
      <% 3.times do |n| %>
        <th>食材<%= n+1 %></th>
      <% end %>
      <th>总价</th>
      <th>日期</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @histories.each do |history| %>
      <tr>
        <% history.materials.each do |material| %>
          <td> <%= material.name %> </td>
        <% end %>
        <td><%= history.total_price %></td>
        <td><%= history.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to '详细', history %></td>
        <td><%= link_to '删除', history, method: :delete, data: { confirm: '确认删除？删除后本次库存将还原。' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate(@histories, previous_label: '上一页',next_label: '下一页',:separator=>" | ") %>
<%= button_to '来个新的', new_history_path, class: "btn btn-primary", method: 'get' %>
