<%= print_keywords @keywords, @posts.count unless @keywords.nil? %>
<% if @posts.count != 0 %>
  <% @posts.each do |post| %>
    <div class="post-overview-item">
      <h2><%= link_to post.title, post %></h2>
      <div>
      <%= raw set_portrait post.user, 's'%>
      <span class="test"> <%= link_to post.user.name , post.user %> 发表于：<%= post.created_at %> </span>
      </div>
      <br />
      <div class="content">
        <%=h simple_format post.content.truncate 200%>
      </div>
      <br />
      <% cmt = post.comments.count %>
      <span class="pull-right">
        <%= cmt.to_s+"条评论" if cmt >0 %>
      </span>
      <%= link_to '全文', post %>
      <% if is_mine?(post) %>
        <%= link_to '修改', edit_post_path(post) %>
        <%= link_to '删除', post, method: :delete, data: { confirm: '确定要删除吗？' } %>
      <% end %>
      <script src="http://tjs.sjs.sinajs.cn/open/api/js/wb.js" type="text/javascript" charset="utf-8"></script>
      <wb:share-button appkey="5dlMeM" addition="full" type="button" default_text="转自好门的博客"></wb:share-button>
      <hr />
    </div>
  <% end %>
<% else %>
  <%= @msg || "还没有博客，有时间的话来写一篇吧^_^"  %>
<% end %>
<%= will_paginate(@posts, previous_label: '上一页',next_label: '下一页',:separator=>" | ") if @keywords.nil? %>
<%= button_to '写新博客', new_post_path , method:'get' , class:"btn btn-primary" %>
