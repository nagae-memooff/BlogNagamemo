<h1>新用户注册</h1>

<%= form_for(@user, html: { class: "form-signin" }) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <tr>
      <td>
        <%= f.label :email , :email地址 %>
      </td>
      <td>
        <%= f.text_field :email %>
      </td>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.label :name , :昵称 %>
    </td>
    <td>
      <%= f.text_field :name %>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.label :password ,:新密码 %>
    </td>
    <td>
      <%= f.password_field :password %>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.label :password_confirmation ,:确认新密码 %>
    </td>
    <td>
      <%= f.password_field :password_confirmation %>
    </td>
  </tr>
</table>



<div class="actions">
  <%= f.submit "确认注册" , class: "btn btn-large btn-primary" %>
  <button onclick="history.go(-1)" class="btn">返回</button>
</div>
<% end %>
