<h1>编辑用户资料</h1>
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <table>
    <tr>
      <td width="20%">
        <%= f.label :email , :email地址 %>
      </td>
      <td>
        <%= f.text_field :email %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :name , :昵称 %>
      </td>
      <td>
        <%= f.text_field :name %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :password ,:新密码 %>
      </td>
      <td>
        <%= f.password_field :password %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :password_confirmation ,:确认新密码 %>
      </td>
      <td>
        <%= f.password_field :password_confirmation %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :mood, :个人简介 %>
      </td>
      <td>
        <%= f.text_field :mood %>
      </td>
    </tr>
  </table>
  <div class="actions">
    <%= f.submit "确认修改" , class: "btn btn-large btn-primary" %>
  </div>
<% end %>
<%= link_to 'Show', @user %> |
<%= link_to_function "返回", "history.go(-1)" %>
