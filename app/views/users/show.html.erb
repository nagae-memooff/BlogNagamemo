<p id="notice"><%= notice %></p>
<%= image_tag @user.portrait_url, class: "portrait_l" %>
<table>
  <tr>
    <td>用户名:</td>
    <td>
      <%= @user.name %>
    </td>
  </tr>
  <tr>
    <td>Email:</td>
    <td>
      <%= @user.email %>
    </td>
  </tr>
  <tr>
    <td>主题数</td>
    <td>
      <%= @user.posts.count %>
    </td>
  </tr>
  <tr>
    <td>回复数</td>
    <td>
      <%= @user.comments.count %>
    </td>
  </tr>
  <tr>
    <td>个人简介:</td>
    <td>
      <%= @user.mood %>
    </td>
  </tr>
</table>
<% if is_me?(@user) %>
  <%= link_to '编辑个人资料', "/edit_me" %> |
<% end %>
<%= link_to_function "返回", "history.go(-1)" %>
